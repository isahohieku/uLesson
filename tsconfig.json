{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "downlevelIteration": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@root": [
                "src/root"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@context": [
                "src/context"
            ],
            "@context/*": [
                "src/context/*"
            ],
            "@types": [
                "src/types"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@hocs/*": [
                "src/hocs/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@routes": [
                "src/routes"
            ],
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}